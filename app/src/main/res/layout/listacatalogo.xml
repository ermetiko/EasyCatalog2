<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        style="@style/HeaderSx"
        android:text="@string/headerFornitore" />

    <Spinner
        android:id="@+id/spnMarche"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        style="@style/HeaderSx"
        android:layout_height="wrap_content"
        android:text="@string/headerCategoria" />

    <Spinner
        android:id="@+id/spnFamiglia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        style="@style/HeaderSx"
        android:text="@string/headerSottocategoria" />

    <ListView
        android:id="@+id/lista"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:choiceMode="singleChoice"
        android:drawSelectorOnTop="true"
        android:paddingLeft="4dp" >  <!-- android:listSelector="@android:color/darker_gray" -->
    </ListView>

</LinearLayout>